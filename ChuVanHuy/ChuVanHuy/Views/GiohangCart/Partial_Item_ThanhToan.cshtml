@model IEnumerable<ChuVanHuy.Models.GiohangCartItem>
@using ChuVanHuy.Common
<style>
    .do{
        color:red;
    }
</style>

    @if (Model != null && Model.Any())
    {
        <h3>Giỏ hàng<span style="float:right;">@Model.Count()</span></h3>
        var i = 0;
        var tongtien = decimal.Zero;
<div style="border:1px solid #ffd800;">
    <table class="table">
        @foreach (var item in Model)
        {
            tongtien += item.TotalPrice;
            <tr>
                <td><img src="@item.ProductImg" width="60" /></td>
                <td>@item.ProductName</td>
                <td>@Common.FormatNumber(item.Prite, 0)</td>
            </tr>
        }
        <tr>
            <td></td>
            <td class="do">Tổng tiền</td>
            <td class="do">
                @Common.FormatNumber(tongtien, 0)
            </td>
        </tr>
    </table>
</div>
    }
    else
    {

    }
