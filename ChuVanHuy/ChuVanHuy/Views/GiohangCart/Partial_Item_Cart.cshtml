@model IEnumerable<ChuVanHuy.Models.GiohangCartItem>
@using ChuVanHuy.Common
<table class="table">
    <tr class="text-center">
        <th>STT</th>
        <th>Ảnh game</th>
        <th>Tên game</th>
        <th>Thể loại</th>
        <th>Giá</th>
        <th>Thành tiền</th>
        <th>
        </th>
    </tr>
    @if (Model != null && Model.Any())
    {
        var i = 0;
        var tongtien = decimal.Zero;
        foreach (var item in Model)
        {
            tongtien += item.TotalPrice;
            <tr class="text-center" id="trow_@item.ProductId">
                <td>@(i+1)</td>
                <td><img src="@item.ProductImg" width="80" /></td>
                <td>
                    <a href="/chi-tiet/@item.Alias-p@(item.ProductId)">
                        @item.ProductName
                    </a>
                </td>
                <td>@item.CategoryName</td>
                <td>@Common.FormatNumber(item.Prite, 0)</td>
                <td>@Common.FormatNumber(item.TotalPrice, 2)</td>
                <td>
                    <a href="#" data-id="@item.ProductId" class="btn btn-sm btn-danger btnDelete">Xoá</a>

                </td>
            </tr>
            i++;
        }
        <tr>
            <th class="text-right" colspan="5">Tổng: </th>
            <th class="text-center">@Common.FormatNumber(tongtien, 0)</th>
            <th></th>
        </tr>
    }
    else
    {
        <tr>
            <td colspan="7">Không có Game nào trong giỏ hàng ( ´･･)ﾉ </td>
        </tr>
    }
</table>
